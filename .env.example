# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration (for local development)
MONGODB_URI=mongodb://admin:your_password@localhost:27017/myapp?authSource=admin

# MongoDB Configuration (for Docker)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_password
MONGO_INITDB_DATABASE=myapp

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BROKERS=localhost:9093
KAFKA_CLIENT_ID=express-app
KAFKA_LOG_TOPIC=server-logs

# Zookeeper Configuration
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# Kafka Broker Configuration
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092,PLAINTEXT_HOST://localhost:9093
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true

# Kafka UI Configuration
KAFKA_CLUSTERS_0_NAME=local
KAFKA_CLUSTERS_0_BOOTSTRAPSERVERS=kafka:9092
KAFKA_CLUSTERS_0_ZOOKEEPER=zookeeper:2181

# Docker App Configuration
DOCKER_NODE_ENV=production
DOCKER_PORT=3000
DOCKER_MONGODB_URI=mongodb://admin:your_password@mongodb:27017/myapp?authSource=admin
DOCKER_REDIS_URL=redis://redis:6379
DOCKER_KAFKA_BROKERS=kafka:9092

# Monitoring (Optional)
GRAFANA_PASSWORD=admin

# Notifications (Optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
DEPLOYMENT_ENV=development
